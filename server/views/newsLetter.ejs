<!DOCTYPE html>
<html>
	<head>
		<title>News Letter</title>
	    <meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		 <!-- Latest compiled and minified CSS -->
		<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
		<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
		<link href="http://cdn.rawgit.com/davidstutz/bootstrap-multiselect/master/dist/css/bootstrap-multiselect.css" rel="stylesheet" type="text/css" />

		<script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
		<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
		<script src="http://cdn.rawgit.com/davidstutz/bootstrap-multiselect/master/dist/js/bootstrap-multiselect.js" type="text/javascript"></script>
        <style>
        body{
        		padding-top: 100px;
        		width:100%;
        	background: url("../../banner.png") no-repeat center center fixed;
		  -webkit-background-size: cover;
		  -moz-background-size: cover;
		  -o-background-size: cover;
		  background-size: cover;
        	}
        	.jumbotron{
        		        	background: url("../../banner.png") no-repeat center center fixed;
		  -webkit-background-size: cover;
		  -moz-background-size: cover;
		  -o-background-size: cover;
		  background-size: cover;
        	}
        	.logo{
        		color: #f4511e;
      			font-size: 20px;
        	}
        	.navBackground{
        		color: #f4511e;
        	}
        </style>
		<script>
		tinymce.init({
			selector:'textarea',
	        theme: 'modern',
			plugins: [
			    'advlist autolink lists link image charmap print preview hr anchor pagebreak',
			    'searchreplace wordcount visualblocks visualchars code fullscreen',
			    'insertdatetime media nonbreaking save table contextmenu directionality',
			    'emoticons template paste textcolor colorpicker textpattern imagetools'
			  ],
			toolbar1: 'insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image',
  			toolbar2: 'print preview media | forecolor backcolor emoticons',
			image_advtab: true,	 
			content_css: [
    		'//fast.fonts.net/cssapi/e6dc9b99-64fe-4292-ad98-6974f93cd2a2.css',
   			'//www.tinymce.com/css/codepen.min.css'
  			]
		});
		</script>
		<script type="text/javascript"> 
			$(function () {
		        $('#lstFruits').multiselect({
		        	buttonWidth: '300px',
		        	enableFiltering: true,
		            includeSelectAllOption: true,
		            maxHeight: 350
		        });   
			});
		</script>
	</head>
	<body>
		<header>
		<% include navigation %>
		</header>
		<div class="container bg-grey">
		<div class="jumbotron">
			<form class="form-horizontal" method="POST" action="/admin/newsletter">
				<div class="row">
				    <div class="col-sm-8">
				    	<div class="form-group">
				    		<input type="text" placeholder="Subject" name="subject" style="width:100%;height:40px"></input>
				    	</div>
						<div class="form-group">
							<textarea class="form-control" id="emailBody" name="emailBody" rows="10"></textarea>
						</div>
					</div>		
					<div class="col-sm-4">
						<h3 style="color:white">Send mail to : </h3>
						<div class="form-group">
							<select id="lstFruits" name="select" multiple="multiple">
								<% for (var i = 0; i < subscribers.length; i++) { %>

								<option><%= subscribers[i].email %></option>
								<% } %>
								<% for (var i = 0; i < users.length; i++) { %>
								<h3><%= users[i].email %></h3>
								<option><%= users[i].email %></option>
								<% } %>
							</select>
						</div>
					</div>
				</div>
	      		<div class="row">
	        		<div class="col-sm-8 form-group">
	            		<button class="btn btn-lg btn-info pull-right" type="submit">Send</button>
	        		</div>
	      		</div>
			</form>
		</div>
		</div>
	</body>
</html>



				